<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.unitconvertor.MainActivity5"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="#ffffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="#fffb8805">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#fffb6020"
            android:src="@drawable/back"
            android:textSize="30dp"
            android:onClick="sound"
            android:id="@+id/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="   Sound"
            android:textAlignment="gravity"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            />




    </LinearLayout>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:text="From Meter/Sec"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="#ff000000"
        android:textSize="15dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"



        android:layout_margin="10dp"
        android:id="@+id/s1"
        android:entries="@array/vol">
        </Spinner>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:background="@drawable/shape1"
        android:layout_margin="10dp"
        android:id="@+id/edit1"
        android:inputType="numberDecimal"
        android:paddingLeft="5dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="convert"
        android:background="#ffffffff"
        android:id="@+id/b1" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:text="To Km/hr"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="#ff000000"
        android:textSize="15dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_margin="10dp"
        android:entries="@array/vol1"
android:id="@+id/s2"

        ></Spinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:background="@drawable/shape1"
        android:layout_margin="10dp"
        android:id="@+id/text1"
        android:paddingLeft="5dp"/>


</LinearLayout>

